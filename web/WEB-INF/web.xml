<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controler.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Controler.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>Controler.Registration</servlet-class>
        <init-param>
            <param-name>uploadDir</param-name>
            <param-value>/tmp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Resend_Password</servlet-name>
        <servlet-class>Controler.Resend_Password</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Reset_Password</servlet-name>
        <servlet-class>Controler.Reset_Password</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Crea_Grouppi</servlet-name>
        <servlet-class>Controler.Crea_Grouppi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Insert_And_Control</servlet-name>
        <servlet-class>Controler.Insert_And_Control</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Invitations</servlet-name>
        <servlet-class>Invitations</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlUpdate</servlet-name>
        <servlet-class>Controler.ControlUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Resend_Password</servlet-name>
        <url-pattern>/Resend_Password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Reset_Password</servlet-name>
        <url-pattern>/Reset_Password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Crea_Grouppi</servlet-name>
        <url-pattern>/Crea_Grouppi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Insert_And_Control</servlet-name>
        <url-pattern>/Insert_And_Control</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Invitations</servlet-name>
        <url-pattern>/Invitations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlUpdate</servlet-name>
        <url-pattern>/ControlUpdate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <listener>
        <description> listener </description>
        <listener-class>Listener.WebAppContextListener</listener-class>
    </listener>
    <context-param>
        <param-name> dburl</param-name>
        <param-value>jdbc:derby://localhost:1527/DataBase;user=root;password=root</param-value>
    </context-param>
</web-app>
